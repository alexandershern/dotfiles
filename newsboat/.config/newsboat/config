# general settings
auto-reload yes
# run-on-startup select-tag
max-items 100
bookmark-autopilot yes

bookmark-cmd ~/.config/newsboat/bookmark.sh

# externel browser
# browser "brave %u"
browser "open -a 'brave browser' '%u'"
# browser "/Applications/Brave Browser.app/Contents/MacOS/brave '%u' &>/dev/null &"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K
unbind-key G
unbind-key END
unbind-key g
unbind-key HOME
unbind-key s
unbind-key S
unbind-key b


color background         default   default
color listnormal         default   default
color listnormal_unread  default   default    
color listfocus          red      default    bold  underline
color listfocus_unread   red       default    bold underline 
color info               default   black
color article            default   default


# bind keys - vim style
bind-key b bookmark 
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key G end
bind-key g home
bind-key s sort
bind-key S rev-sort

highlight article "^Feed:.*" magenta default 
highlight article "^Title:.*" magenta default bold
highlight article "^Author:.*" green default
highlight article "^Date:.*" yellow default
highlight article "^Link:.*" blue default
highlight article "^Flags:.*" magenta default
highlight article "\\[[0-9][0-9]*\\]" color66 default bold
highlight article "\\[image [0-9][0-9]*\\]" color109 default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" color66 default bold

highlight feedlist "[║│]" green default bold
highlight feedlist "╠═.*" green default bold


feedlist-format "%?T?║%4i %n %8u (%T) %t &╠═════════════════════════════════════════════════════%t?"


