# general settings
auto-reload yes
# run-on-startup select-tag
max-items 100
bookmark-autopilot yes

bookmark-cmd ~/.config/newsboat/bookmark.sh

# externel browser
browser "firefox %u"
macro m set browser "/usr/local/bin/mpv %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"
macro l set browser "/usr/local/bin/firefox %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K
unbind-key G
unbind-key END
unbind-key g
unbind-key HOME
unbind-key s
unbind-key S
unbind-key b


# bind keys - vim style
bind-key b bookmark 
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key G end
bind-key g home
bind-key s sort
bind-key S rev-sort

# solarized
color background         default   default
color listnormal         default   default
color listnormal_unread  default   default
color listfocus          black     blue
color listfocus_unread   black     blue
color info               default   black
color article            default   default
